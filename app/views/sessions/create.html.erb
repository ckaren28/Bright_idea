<div class="logo1">
</div>
<div class= 'OpenPage col-xs-12'>

    <div class= 'login'>
        <h2>Log In</h2>

        <form action="/sessions" method="post" role="form" class ='log'>
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <p>
            <label for="alias">Username</label>
            <input type="alias" class="form-control" name="Alias" placeholder="">
          </p>
          <p>
            <label for="password">Password</label>
            <input type="password" class="form-control" name="Password" placeholder="">
          </p>
          <button type="submit" class="lightup">Log me in</button>
        </form>
    </div>

    <div class="toggleReg">
      <a class="toggleSignUp"> Don't have a username? </a>
    </div>
    <div class= 'register '>
        <h2>Sign up</h2>
        <form action="/users" method="post" class= 'reg'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <p>
          <label for="first_name"> Name</label>
          <input type="text" class="form-control" name="name" placeholder="">
        </p>
        <p>
          <label for="alias">Username</label>
          <input type="text" class="form-control" name="alias" placeholder="">
        </p>
        <p>
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" placeholder="">
        </p>
        <p>
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" placeholder="">
        </p>
        <p>
          <label for="password_confirmation">Password Confirmation</label>
          <input type="password" class="form-control" name="password confirmation" placeholder="">
        </p>
        <button type="submit" class="lightup">Register</button>
      </form>
    </div>



</div>

<script>

$(function() {
    $(".register").hide();
    $("a.toggleSignUp").click(function(event) {
        event.preventDefault();
        $(".register").toggle();
    });
});
</script>
