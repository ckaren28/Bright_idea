<h1>Welcome!</h1>
<div class= 'content'>
    <div class= 'register'>
        <h2>Register</h2>
        <form action="/users" method="post" class= 'reg'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <p>
          <label for="first_name"> Name</label>
          <input type="text" class="form-control" name="name" placeholder="Ente name">
        </p>
        <p>
          <label for="alias">Alias</label>
          <input type="text" class="form-control" name="alias" placeholder="Enter Alias">
        </p>
        <p>
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Enter email">
        </p>
        <p>
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" placeholder="Enter password">
        </p>
        <p>
          <label for="password_confirmation">Password Confirmation</label>
          <input type="password" class="form-control" name="password confirmation" placeholder="Confirm Password">
        </p>
        <button type="submit" class="btn btn-default">Register</button>
      </form>
    </div>


    <div class= 'login'>
        <h2>Log In</h2>

        <form action="/sessions" method="post" role="form" class ='log'>
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <p>
            <label for="email">Email</label>
            <input type="email" class="form-control" name="Email" placeholder="Enter email">
          </p>
          <p>
            <label for="password">Password</label>
            <input type="password" class="form-control" name="Password" placeholder="Enter password">
          </p>
          <button type="submit" class="btn btn-default">Log In</button>
        </form>
    </div>
</div>
